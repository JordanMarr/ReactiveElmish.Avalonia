<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        Width="400"
        x:Class="AvaloniaExample.Views.MainView"        
        Icon="/Assets/avalonia-logo.ico"
        xmlns:vm="using:AvaloniaExample.ViewModels"
        Design.DataContext="{Binding Source={x:Static vm:MainViewModel.designVM}}"
        Title="AvaloniaExample">

	<DockPanel LastChildFill="true">

		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
		    <Button Content="Counter View" Command="{Binding ShowCounter}" />
		    <Button Content="About" Command="{Binding ShowAbout}" />
		</StackPanel>
		
		<ContentControl Content="{Binding ContentVM}" />
		
	</DockPanel>
    
</Window>
